# FPL Agent Environment Variables
# Copy this file to .env and fill in your values

# FPL Credentials (required)
FPL_EMAIL=your_email@example.com
FPL_PASSWORD=your_password
FPL_TEAM_ID=your_team_id

# Execution Mode
DRY_RUN=false
LOG_LEVEL=INFO

# Telegram Notifications (recommended)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_chat_id

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=your_email@example.com

# FPL Review projections are downloaded by the Raspberry Pi
# and SCP'd to data/projected_points.csv â€” no credentials needed here

# Twitter/X API (optional, for team odds data)
X_BEARER_TOKEN=your_twitter_bearer_token
